<idea-plugin>
  <id>com.marcherdiego.events.navigator</id>
  <name>Event bus navigator</name>
  <version>1.0.0</version>
  <vendor email="diego@marcher.com.uy" url="http://www.marcher.com.uy">Diego Marcher</vendor>

  <description><![CDATA[
      Small plugin to keep track of event-posters for a given subscriber
    ]]></description>

  <change-notes><![CDATA[
      Initial release
      Basic wiring for @Subscribe-annotated methods, regardless the posting bus
    ]]>
  </change-notes>

  <idea-version since-build="145.0"/>
  <depends>com.intellij.modules.platform</depends>
  <depends>com.intellij.modules.lang</depends>
  <depends>com.intellij.modules.java</depends>
  <depends>org.jetbrains.kotlin</depends>

  <extensions defaultExtensionNs="com.intellij">
    <codeInsight.lineMarkerProvider language="kotlin" implementationClass="com.marcherdiego.events.navigator.SubscribersKotlinLineMarker"/>
    <codeInsight.lineMarkerProvider language="JAVA" implementationClass="com.marcherdiego.events.navigator.SubscribersJavaLineMarker"/>
  </extensions>

</idea-plugin>